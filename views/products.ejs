<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Product List</title>
  <style>
    table {
      width: 80%;
      border-collapse: collapse;
      margin: 20px auto;
    }
    th, td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    h1 {
      text-align: center;
    }
    a {
      display: block;
      text-align: center;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>Available Products</h1>

  <% if (products && products.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Product Name</th>
          <th>Price (₹)</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.product_id %></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
        
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p style="text-align:center;">No products found.</p>
  <% } %>

  <a href="/dashboard">← Back to Dashboard</a>
</body>
</html>